@model List<EventManagementSystem.BLL.ViewModels.User.UserDetailsVM>

@{
    Layout = "_Layout"; // your layout if applicable
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <!-- Toolbar -->
    <div class="toolbar" id="kt_toolbar">
        <!-- Toolbar Content -->
    </div>
    <!-- End Toolbar -->
    <!-- Main Content -->
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-header border-0 pt-6">
                    <!-- Search omitted for brevity -->
                </div>

                <div class="card-body pt-0">
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_table_students">
                        <thead>
                            <tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0">
                                <th></th>
                                <th>Student</th>
                                <th>Email</th>
                                <th>Approved</th>
                                <th>Joined Date</th>
                                <th>File</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 fw-bold">
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>
                                        <input class="form-check-input" type="checkbox" value="@student.Id" />
                                    </td>
                                    <td class="d-flex align-items-center">
                                        <img src="@student.ImageUrl" class="symbol symbol-50px me-3 rounded-circle" alt="@student.FullName" />
                                        <span>@student.FullName</span>
                                    </td>
                                    <td>@student.Email</td>
                                    <td>
                                        @if (student.IsStudent)
                                        {
                                            <span class="badge badge-light-success">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-light-danger">Pending</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(student.FileUrl))
                                        {
                                            <a href="javascript:;" class="text-primary view-file-link"
                                               data-file-url="@student.FileUrl"
                                               data-student-name="@student.FullName">📂 View File</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No file</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-bs-toggle="dropdown">Actions</a>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a asp-controller="Students" asp-action="Details" asp-route-id="@student.Id" class="dropdown-item">View</a>

                                                @if (!student.IsStudent)
                                                {
                                                    <!-- ✅ Approve as POST -->
                                                    <form asp-controller="Students" asp-action="Approve" method="post" class="m-0 p-0">
                                                        <input type="hidden" name="studentId" value="@student.Id" />
                                                        <button type="submit" class="dropdown-item text-success">Approve</button>
                                                    </form>
                                                }

                                                <a href="javascript:;" class="dropdown-item text-danger delete-btn"
                                                   data-id="@student.Id"
                                                   data-name="@student.FullName"
                                                   data-url="@Url.Action("Delete", "Students")">Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="filePreviewModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content bg-dark text-white border-0">
            <div class="modal-header border-0">
                <h5 class="modal-title">File Preview</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center p-0" id="modal-body-content"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // 🖼 Preview file
        document.addEventListener('DOMContentLoaded', function() {
            const previewModal = new bootstrap.Modal(document.getElementById('filePreviewModal'));
            const modalContent = document.getElementById('modal-body-content');

            document.querySelectorAll('.view-file-link').forEach(link => {
                link.addEventListener('click', function() {
                    const fileUrl = this.dataset.fileUrl;
                    let contentHtml = fileUrl.match(/\.(jpeg|jpg|png|gif)$/i)
                        ? `<img src="${fileUrl}" class="img-fluid" style="max-height:80vh;" />`
                        : fileUrl.match(/\.(pdf)$/i)
                            ? `<iframe src="${fileUrl}" style="width:100%; height:80vh;" frameborder="0"></iframe>`
                            : `<a href="${fileUrl}" target="_blank" class="btn btn-primary">Download File</a>`;
                    modalContent.innerHTML = contentHtml;
                    previewModal.show();
                });
            });

            // 🗑 Delete student with AJAX
            document.querySelectorAll('.delete-btn').forEach(btn => {
                btn.addEventListener('click', async function() {
                    const id = this.dataset.id;
                    const name = this.dataset.name;
                    const url = this.dataset.url;
                    if (!confirm(`Delete student ${name}?`)) return;
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8' },
                        body: new URLSearchParams({ studentId: id })
                    });
                    const result = await response.json();
                    if (result.success) {
                        alert(result.message);
                        location.reload();
                    } else {
                        alert(result.message || "Error occurred.");
                    }
                });
            });
        });
    </script>
}

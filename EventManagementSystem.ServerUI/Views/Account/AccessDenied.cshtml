        <!--begin::Message-->
        <div class="fw-semibold fs-6 text-gray-600 mb-7">
            Sorry, you do not have permission to view this page.
        </div>
        <!--end::Message-->
        <!--begin::Actions-->
        <div class="mb-0">
            <a asp-controller="Dashboard" asp-action="Index"  class="btn btn-primary btn-lg fw-bold me-3">
                <i class="ki-outline ki-home fs-3 me-1"></i> Go to Dashboard
            </a>
            <a href="javascript:history.back()" class="btn btn-light btn-lg fw-bold">
                <i class="ki-outline ki-arrow-left fs-3 me-1"></i> Go Back
            </a>
        </div>
        <!--end::Actions-->

<!-- Metronic Icons (optional, if using Metronic SVG icons) -->

<div class="d-flex flex-column flex-root">
    <!--begin::Authentication - Access Denied -->
    <div class="d-flex flex-column flex-center flex-column-fluid">
        <!--begin::Illustration-->
        <div class="mb-10">
            <svg xmlns="http://www.w3.org/2000/svg" class="svg-icon svg-icon-10x svg-icon-danger" width="200" height="200" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">

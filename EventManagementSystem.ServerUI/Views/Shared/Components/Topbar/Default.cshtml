@model UserHeaderVM

<div class="d-flex align-items-center ms-1 ms-lg-3" id="kt_header_user_menu_toggle">
    <div class="cursor-pointer symbol symbol-30px symbol-md-40px" 
         data-kt-menu-trigger="click" 
         data-kt-menu-attach="parent" 
         data-kt-menu-placement="bottom-end">
        <img src="@(Model.ImageUrl)" alt="user" />
    </div>

    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-primary fw-bold py-4 fs-6 w-275px" 
         data-kt-menu="true">
        <div class="menu-item px-3">
            <div class="menu-content d-flex align-items-center px-3">
                <div class="symbol symbol-50px me-5">
                    <img alt="Logo" src="@(Model.ImageUrl)" />
                </div>
                <div class="d-flex flex-column">
                    <div class="fw-bolder d-flex align-items-center fs-5">
                        @Model.FullName
                        @if (!string.IsNullOrEmpty(Model.Role))
                        {
                            <span class="badge badge-light-@((string)ViewBag.RoleBadgeColor) fw-bolder fs-8 px-2 py-1 ms-2">
                                @Model.Role
                            </span>
                        }
                    </div>
                    <a href="mailto:@Model.Email" class="fw-bold text-muted text-hover-primary fs-7">
                        @Model.Email
                        @if (Model.EmailConfirmed)
                        {
                            <span class="svg-icon svg-icon-1 svg-icon-success ms-1" 
                                    data-bs-toggle="tooltip" 
                                    title="Verified email">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <path opacity="0.3" d="M20.5543 4.37824L12.1798 2.02473C12.0626 1.99176 11.9376 1.99176 11.8203 2.02473L3.44572 4.37824C3.18118 4.45258 3 4.6807 3 4.93945V13.569C3 14.6914 3.48509 15.8404 4.4417 16.984C5.17231 17.8575 6.18314 18.7345 7.446 19.5909C9.56752 21.0295 11.6566 21.912 11.7445 21.9488C11.8258 21.9829 11.9129 22 12.0001 22C12.0872 22 12.1744 21.983 12.2557 21.9488C12.3435 21.912 14.4326 21.0295 16.5541 19.5909C17.8169 18.7345 18.8277 17.8575 19.5584 16.984C20.515 15.8404 21 14.6914 21 13.569V4.93945C21 4.6807 20.8189 4.45258 20.5543 4.37824Z" fill="currentColor" />
                                    <path d="M10.5606 11.3042L9.57283 10.3018C9.28174 10.0065 8.80522 10.0065 8.51412 10.3018C8.22897 10.5912 8.22897 11.0559 8.51412 11.3452L10.4182 13.2773C10.8099 13.6747 11.451 13.6747 11.8427 13.2773L15.4859 9.58051C15.771 9.29117 15.771 8.82648 15.4859 8.53714C15.1948 8.24176 14.7183 8.24176 14.4272 8.53714L11.7002 11.3042C11.3869 11.6221 10.874 11.6221 10.5606 11.3042Z" fill="currentColor" />
                                </svg>
                            </span>
                        }
                    </a>
                </div>
            </div>
        </div>

        <div class="separator my-2"></div>

        <div class="menu-item px-5">
            <a asp-controller="Profile" asp-action="Index" asp-route-id="@Model.Id" class="menu-link px-5">My Profile</a>
        </div>

        @if (Model.Id != null) // Only show these for authenticated users
        {
            <div class="menu-item px-5" data-kt-menu-trigger="hover" data-kt-menu-placement="left-start">
                <a href="#" class="menu-link px-5">
                    <span class="menu-title">My Subscription</span>
                    <span class="menu-arrow"></span>
                </a>
                <div class="menu-sub menu-sub-dropdown w-175px py-4">
                    <div class="menu-item px-3">
                        <a asp-controller="Account" asp-action="Referrals" class="menu-link px-5">Referrals</a>
                    </div>
                    <div class="menu-item px-3">
                        <a asp-controller="Account" asp-action="Billing" class="menu-link px-5">Billing</a>
                    </div>
                    <div class="menu-item px-3">
                        <a asp-controller="Account" asp-action="Payments" class="menu-link px-5">Payments</a>
                    </div>
                    <div class="menu-item px-3">
                        <a asp-controller="Account" asp-action="Statements" class="menu-link d-flex flex-stack px-5">
                            Statements
                            <i class="fas fa-exclamation-circle ms-2 fs-7" data-bs-toggle="tooltip" title="View your statements"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="menu-item px-5">
                <a asp-controller="Account" asp-action="Statements" class="menu-link px-5">My Statements</a>
            </div>

            <div class="separator my-2"></div>

            <div class="menu-item px-5 my-1">
                <a asp-controller="Profile" asp-action="Settings" class="menu-link px-5">Account Settings</a>
            </div>

            <div class="menu-item px-5">
                <a asp-controller="Account" asp-action="SignOut" class="menu-link px-5">Sign Out</a>
            </div>
        }

        <div class="separator my-2"></div>
        <div class="menu-item px-5">
            <div class="menu-content px-5">
                <label class="form-check form-switch form-check-custom form-check-solid pulse pulse-success" 
                       for="kt_user_menu_dark_mode_toggle">
                    <input class="form-check-input w-30px h-20px" type="checkbox" value="1" name="mode" 
                           id="kt_user_menu_dark_mode_toggle" data-kt-url="../../demo1/dist/index.html" />
                    <span class="pulse-ring ms-n1"></span>
                    <span class="form-check-label text-gray-600 fs-7">Dark Mode</span>
                </label>
            </div>
        </div>
    </div>
</div>

<script>
    // Only put this code here if it's NOT already in site.js
    // If it is in site.js, remove this entire <script> block.
    const defaultThemeMode = 'light'; 
    let themeMode;

    if (document.documentElement) {
        if (localStorage.getItem('theme')) {
            themeMode = localStorage.getItem('theme');
        } else if (document.documentElement.hasAttribute('data-theme-mode')) {
            themeMode = document.documentElement.getAttribute('data-theme-mode');
        } else {
            themeMode = defaultThemeMode;
        }

        if (themeMode === 'system') {
            themeMode = window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }

        document.documentElement.classList.add(themeMode);
    }
</script>
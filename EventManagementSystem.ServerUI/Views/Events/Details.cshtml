@model EventManagementSystem.BLL.ViewModels.Event.EventDetailsVM

@{
    ViewData["Title"] = "Event Details";
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Event Details</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Events" asp-action="Index" class="text-muted text-hover-primary">Events</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Details</li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Index" class="btn btn-sm btn-light-primary fw-bold px-6">
                    <i class="ki-outline ki-arrow-left fs-4 me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <h3 class="card-label">Event: @Model.Title</h3>
                    </div>
                    <div class="card-toolbar">
                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-light-primary btn-sm">Edit Event</a>
                    </div>
                </div>
                <div class="card-body pt-0">
                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Event ID:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.Id</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Title:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.Title</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Description:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.Description</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Start Date:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.StartDate.ToString("yyyy-MM-dd HH:mm")</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">End Date:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.EndDate.ToString("yyyy-MM-dd HH:mm")</span>
                        </div>
                    </div>

                    <div class="separator separator-dashed my-10"></div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Event Type:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">
                                @(Model.EventType != null ? Model.EventType.Name : "N/A")
                            </span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Location:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">
                                @(Model.Location != null ? $"{Model.Location.Name} - {Model.Location.Address}" : "N/A")
                            </span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Organizer:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">
                                @if (Model.Organizer != null && Model.Organizer.User != null)
                                {
                                    <span>@Model.Organizer.User.FullName (@Model.Organizer.PublicEmail)</span>
                                }
                                else
                                {
                                    <span>N/A</span>
                                }
                            </span>
                        </div>
                    </div>

                    <div class="separator separator-dashed my-10"></div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Invitations Count:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.InvitationsCount</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Participations Count:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.ParticipationsCount</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Feedbacks Count:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.FeedbacksCount</span>
                        </div>
                    </div>

                    <div class="separator separator-dashed my-10"></div>

                    <h3>Event Photos (@(Model.EventPhotos?.Count ?? 0))</h3>
                    <div class="row g-5 g-xl-8 pt-5">
                        @if (Model.EventPhotos != null && Model.EventPhotos.Any())
                        {
                            @foreach (var photo in Model.EventPhotos.OrderBy(p => p.Order))
                            {
                                <div class="col-md-4">
                                    <div class="card card-dashed h-100">
                                        <div class="card-body d-flex justify-content-center align-items-center flex-column">
                                            @if (!string.IsNullOrEmpty(photo.Url))
                                            {
                                                <img src="@photo.Url" class="img-fluid rounded mb-3" alt="Event Photo" style="max-height: 200px; object-fit: cover;" onerror="this.onerror=null;this.src='https://placehold.co/200x200/e0e0e0/ffffff?text=No+Image';">
                                            }
                                            else
                                            {
                                                <img src="https://placehold.co/200x200/e0e0e0/ffffff?text=No+Image" class="img-fluid rounded mb-3" alt="No Image">
                                            }
                                            <h5 class="text-gray-800 fw-bolder">Order: @photo.Order</h5>
                                            <p class="text-muted text-center">@(string.IsNullOrEmpty(photo.Description) ? "No description provided." : photo.Description)</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="col-12 text-center text-muted py-5">
                                No photos available for this event.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/custom/site.js"></script>
}

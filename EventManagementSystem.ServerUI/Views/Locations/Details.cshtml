@model LocationDetailsVM

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Location Details</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Locations" asp-action="Index" class="text-muted text-hover-primary">Locations</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Detail</li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-sm btn-primary fw-bold px-6">
                    <i class="ki-outline ki-pencil fs-4 me-2"></i> Edit Location
                </a>
                <a asp-action="Index" class="btn btn-sm btn-light-primary fw-bold px-6">
                    <i class="ki-outline ki-arrow-left fs-4 me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div class="container-xxl">
            <div class="card shadow-sm">
                <div class="card-body p-10">
                    <div class="row align-items-center">

                        <div class="col-md-12">
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Name:</div>
                                <div class="col-sm-8 text-dark fs-6 fw-semibold">@Model.Name</div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Description:</div>
                                <div class="col-sm-8 text-dark fs-6">@Model.Description</div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Address:</div>
                                <div class="col-sm-8 text-dark fs-6">@Model.Address</div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-sm-4 text-muted fw-bold fs-6">Capacity:</div>
                                <div class="col-sm-8 text-dark fs-6">@Model.Capacity</div>
                            </div>

                            @if (Model.LocationPhotos != null && Model.LocationPhotos.Any())
                            {
                                <div class="row g-5 g-xl-8 mt-5">
                                    @foreach (var photo in Model.LocationPhotos.OrderBy(p => p.Order))
                                    {
                                        <div class="col-md-3 col-sm-6">
                                            <div class="card card-xl-stretch me-md-6 mb-5 mb-xl-0">
                                                <div class="card-body d-flex flex-column p-0">
                                                    <div class="overlay-wrapper bgi-no-repeat bgi-position-center bgi-size-cover card-rounded min-h-175px" style="background-image:url('@photo.Url')">
                                                    </div>
                                                    <div class="mt-5 text-center">
                                                        <a href="@photo.Url" target="_blank" class="text-gray-900 fw-bold text-hover-primary fs-6">View Photo</a>
                                                        @if (!string.IsNullOrEmpty(photo.Description))
                                                        {
                                                            <span class="text-muted fw-semibold d-block">@photo.Description</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning d-flex align-items-center p-5 mt-10">
                                    <i class="ki-outline ki-information-5 fs-2hx text-warning me-4"></i>
                                    <div class="d-flex flex-column">
                                        <h4 class="mb-1 text-warning">No Photos Available</h4>
                                        <span>There are no photos added for this location yet.</span>
                                    </div>
                                </div>
                            }

                            @if (Model.Events != null && Model.Events.Any())
                            {
                                <div class="table-responsive mt-10">
                                    <table class="table align-middle table-row-dashed fs-6 gy-5">
                                        <thead>
                                            <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                                                <th class="min-w-125px">Title</th>
                                                <th class="min-w-125px">Start Date</th>
                                                <th class="min-w-125px">End Date</th>
                                                <th class="min-w-125px">Main Image</th>
                                                <th class="min-w-125px">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-gray-600 fw-semibold">
                                            @foreach (var ev in Model.Events)
                                            {
                                                <tr>
                                                    <td>@ev.Title</td>
                                                    <td>@ev.StartDate.ToShortDateString()</td>
                                                    <td>@ev.EndDate.ToShortDateString()</td>
                                                    <td>
                                                        @if (!string.IsNullOrEmpty(ev.MainImageUrl))
                                                        {
                                                            <img src="@ev.MainImageUrl" alt="Event Image" class="w-50px h-50px object-fit-cover rounded" />
                                                        }
                                                        else
                                                        {
                                                            <span>N/A</span>
                                                        }
                                                    </td>
                                                    <td>
                                                        <a asp-controller="Events" asp-action="Details" asp-route-id="@ev.Id" class="btn btn-sm btn-light-info">View Details</a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info d-flex align-items-center p-5 mt-10">
                                    <i class="ki-outline ki-information-5 fs-2hx text-info me-4"></i>
                                    <div class="d-flex flex-column">
                                        <h4 class="mb-1 text-info">No Associated Events</h4>
                                        <span>There are no events currently associated with this location.</span>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
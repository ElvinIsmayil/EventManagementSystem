@model EventManagementSystem.BLL.ViewModels.Organizer.OrganizerDetailsVM



<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Organizer Details</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Organizers" asp-action="Index" class="text-muted text-hover-primary">Organizers</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Details</li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Index" class="btn btn-sm btn-light-primary fw-bold px-6">
                    <i class="ki-outline ki-arrow-left fs-4 me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <h3 class="card-label">Organizer: @Model.User.FullName</h3>
                    </div>
                    <div class="card-toolbar">
                        <a asp-action="Update" asp-route-id="@Model.Id" class="btn btn-light-primary btn-sm">Edit Organizer</a>
                    </div>
                </div>
                <div class="card-body pt-0">
                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Organizer ID:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.Id</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Associated User:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">
                                @Model.User.Name (@Model.User.Email)
                            </span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Public Email:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.PublicEmail</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Public Phone Number:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.PublicPhoneNumber</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Public Website:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">
                                @if (!string.IsNullOrEmpty(Model.PublicWebsite))
                                {
                                    <a href="@Model.PublicWebsite" target="_blank" class="text-hover-primary">@Model.PublicWebsite</a>
                                }
                                else
                                {
                                    <span>N/A</span>
                                }
                            </span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Average Rating:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.AverageRating</span>
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Is Approved:</label>
                        <div class="col-lg-8">
                            @if (Model.IsApproved)
                            {
                                <span class="badge badge-light-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge badge-light-danger">No</span>
                            }
                        </div>
                    </div>

                    <div class="row mb-7">
                        <label class="col-lg-4 fw-bold text-muted">Number of Organized Events:</label>
                        <div class="col-lg-8">
                            <span class="fw-bolder fs-6 text-gray-800">@Model.OrganizedEventsCount</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/custom/site.js"></script>
}

@model EventManagementSystem.BLL.ViewModels.Organizer.OrganizerUpdateVM


<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
                <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">Edit Organizer</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Dashboard" asp-action="Index" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a asp-controller="Organizers" asp-action="Index" class="text-muted text-hover-primary">Organizers</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-200 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-dark">Edit</li>
                </ul>
            </div>

            <div class="d-flex align-items-center gap-3">
                <a asp-action="Index" class="btn btn-sm btn-light-primary fw-bold px-6">
                    <i class="ki-outline ki-arrow-left fs-4 me-2"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <h3 class="card-label">Update Organizer Details</h3>
                    </div>
                </div>
                <div class="card-body pt-0">
                    <form asp-controller="Organizers" asp-action="Update" method="post" id="organizer-update-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-10">
                            <label asp-for="PublicEmail" class="form-label fw-bold"></label>
                            <input asp-for="PublicEmail" class="form-control form-control-solid" placeholder="Enter public email" />
                            <span asp-validation-for="PublicEmail" class="text-danger"></span>
                        </div>

                        <div class="mb-10">
                            <label asp-for="PublicPhoneNumber" class="form-label fw-bold"></label>
                            <input asp-for="PublicPhoneNumber" class="form-control form-control-solid" placeholder="Enter public phone number" />
                            <span asp-validation-for="PublicPhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="mb-10">
                            <label asp-for="PublicWebsite" class="form-label fw-bold"></label>
                            <input asp-for="PublicWebsite" class="form-control form-control-solid" placeholder="Enter public website URL" />
                            <span asp-validation-for="PublicWebsite" class="text-danger"></span>
                        </div>

                        <div class="mb-10">
                            <label asp-for="UserId" class="form-label fw-bold">Associated User Account</label>
                            <select asp-for="UserId" class="form-select form-select-solid"
                                    asp-items="@(ViewData["Users"] as SelectList)"
                                    data-control="select2" data-placeholder="Select an associated user">
                                <option value="">Select an associated user</option>
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <div class="mb-10 form-check form-check-custom form-check-solid">
                            <input class="form-check-input" type="checkbox" asp-for="IsApproved" id="IsApproved" />
                            <label class="form-check-label" for="IsApproved">
                                @Html.DisplayNameFor(model => model.IsApproved)
                            </label>
                            <span asp-validation-for="IsApproved" class="text-danger"></span>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a asp-controller="Organizers" asp-action="Index" class="btn btn-light">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/assets/js/custom/site.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Rebind validation to the form if dynamically rendered or after AJAX updates
            function rebindValidation() {
                if (typeof $ !== 'undefined' && $.validator && $.validator.unobtrusive) {
                    $('form#organizer-update-form').removeData('validator');
                    $('form#organizer-update-form').removeData('unobtrusiveValidation');
                    $.validator.unobtrusive.parse('form#organizer-update-form');
                }
            }
            rebindValidation(); // Call on document ready
        });
    </script>
}

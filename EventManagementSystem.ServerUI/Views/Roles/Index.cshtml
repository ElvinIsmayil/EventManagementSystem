
@model List<RoleListVM>

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 g-5 g-xl-9">

                @foreach (var role in Model)
                {
                    <div class="col-md-4">
                        <div class="card card-flush h-md-100">
                            <div class="card-header">
                                <div class="card-title">
                                    <h2>@role.Name</h2> 
                                </div>
                            </div>
                            
                            <div class="card-footer flex-wrap pt-0">
                                <a asp-controller="Roles" asp-action="Details" asp-route-id ="@role.Id" class="btn btn-light btn-active-primary my-1 me-2">View Role</a>
                                <button asp-controller="Roles" asp-action="Update" type="button" class="btn btn-light btn-active-light-primary my-1">Edit Role</button>
                            </div>
                        </div>
                    </div>
                }

                <div class="col-md-4">
                    <div class="card h-md-100">
                        <div class="card-body d-flex flex-center">
                            <button type="button" class="btn btn-clear d-flex flex-column flex-center" data-bs-toggle="modal" data-bs-target="#kt_modal_add_role">
                                <img src="~/media/illustrations/sketchy-1/4.png" alt="" class="mw-100 mh-150px mb-7" />
                                <a asp-controller="Roles" asp-action="Create" class="fw-bolder fs-3 text-gray-600 text-hover-primary">Add New Role</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
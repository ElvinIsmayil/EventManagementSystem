@model SignUpVM

<section class="relative min-h-screen flex items-center justify-center py-8 px-4 overflow-hidden bg-gray-900 animate-fadeIn">
    <div style="background-image: url('https://public.readdy.ai/ai/img_res/cdf07a0e8700a86b91dd5e3d00edbeb2.jpg');" class="absolute inset-0 bg-cover bg-center transform scale-105 animate-pulse" style="animation-duration: 20s;"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 to-gray-900/40"></div>

    <div class="relative z-10 bg-white/10 backdrop-blur-md p-6 rounded-lg shadow-xl border border-white/20 w-full max-w-sm animate-slideUp" style="animation-delay: 0.3s;">
        <h2 class="text-3xl font-bold text-white mb-4 text-center">Join Our Community!</h2>
        <p class="text-gray-200 mb-6 text-center">Create your account to discover and book amazing events.</p>

        <form asp-action="SignUp" asp-controller="Auth" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-400 text-sm mb-3"></div>

            <div class="mb-4">
                <label asp-for="Name" class="block text-gray-200 text-sm font-medium mb-2">Name</label>
                <div class="relative">
                    <input asp-for="Name" type="text" placeholder="John" class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary text-gray-900 bg-white/90 text-sm" required>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                        <i class="ri-user-line"></i>
                    </div>
                </div>
                <span asp-validation-for="Name" class="text-red-400 text-xs mt-1 block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Surname" class="block text-gray-200 text-sm font-medium mb-2">Surname</label>
                <div class="relative">
                    <input asp-for="Surname" type="text" placeholder="Doe" class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary text-gray-900 bg-white/90 text-sm" required>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                    </div>
                </div>
                <span asp-validation-for="Surname" class="text-red-400 text-xs mt-1 block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Email" class="block text-gray-200 text-sm font-medium mb-2">Email Address</label>
                <div class="relative">
                    <input asp-for="Email" type="email" placeholder="your.email@example.com" class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary text-gray-900 bg-white/90 text-sm" required>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                        <i class="ri-mail-line"></i>
                    </div>
                </div>
                <span asp-validation-for="Email" class="text-red-400 text-xs mt-1 block"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Password" class="block text-gray-200 text-sm font-medium mb-2">Password</label>
                <div class="relative">
                    <input asp-for="Password" type="password" placeholder="••••••••" class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary text-gray-900 bg-white/90 text-sm" required>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                        <i class="ri-lock-line"></i>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-red-400 text-xs mt-1 block"></span>
            </div>

            <div class="mb-5">
                <label asp-for="ConfirmPassword" class="block text-gray-200 text-sm font-medium mb-2">Confirm Password</label>
                <div class="relative">
                    <input asp-for="ConfirmPassword" type="password" placeholder="••••••••" class="w-full pl-10 pr-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary text-gray-900 bg-white/90 text-sm" required>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                        <i class="ri-lock-line"></i>
                    </div>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-red-400 text-xs mt-1 block"></span>
            </div>

            <div class="flex items-center mb-5">
                <input asp-for="Toc" type="checkbox" class="h-4 w-4 text-primary rounded border-gray-300 focus:ring-primary" required>
                <label asp-for="Toc" class="ml-2 block text-gray-200 text-sm">
                    I agree to the <a href="#" class="text-primary hover:underline font-medium">Terms and Conditions</a>
                </label>
            </div>
            <span asp-validation-for="Toc" class="text-red-400 text-xs mt-1 block"></span>


            <button type="submit" class="w-full py-2.5 bg-primary text-white font-semibold rounded-button hover:bg-primary/90 transition-colors duration-300">Sign Up</button>
        </form>

        <p class="text-center text-gray-300 text-sm mt-5">
            Already have an account? <a asp-controller="Auth" asp-action="SignIn" class="text-primary hover:underline font-medium">Sign In</a>
        </p>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

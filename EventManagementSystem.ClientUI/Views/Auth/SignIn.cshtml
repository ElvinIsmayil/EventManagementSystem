@model SignInVM

<section class="relative min-h-screen flex items-center justify-center py-12 px-4 overflow-hidden bg-gray-900 animate-fadeIn">
    <div style="background-image: url('https://public.readdy.ai/ai/img_res/cdf07a0e8700a86b91dd5e3d00edbeb2.jpg');" class="absolute inset-0 bg-cover bg-center transform scale-105 animate-pulse" style="animation-duration: 20s;"></div>
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 to-gray-900/40"></div>

    <div class="relative z-10 bg-white/10 backdrop-blur-md p-8 rounded-lg shadow-xl border border-white/20 w-full max-w-md animate-slideUp" style="animation-delay: 0.3s;">
        <h2 class="text-3xl font-bold text-white mb-6 text-center">Welcome Back!</h2>
        <p class="text-gray-200 mb-8 text-center">Sign in to manage your events and bookings.</p>

        @* Add method="post" and asp-action/asp-controller to the form *@
        <form asp-action="SignIn" asp-controller="Auth" method="post">
            <div class="mb-5">
                @* Use asp-for for the label and input to bind to the model properties *@
                <label asp-for="Email" class="block text-gray-200 text-sm font-medium mb-2"></label>
                <div class="relative">
                    <input asp-for="Email" type="email" placeholder="your.email@example.com" class="w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary text-gray-900 bg-white/90 text-sm" required>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                        <i class="ri-mail-line"></i>
                    </div>
                </div>
                @* Display validation messages for Email *@
                <span asp-validation-for="Email" class="text-red-400 text-xs mt-1 block"></span>
            </div>
            <div class="mb-6">
                @* Use asp-for for the label and input to bind to the model properties *@
                <label asp-for="Password" class="block text-gray-200 text-sm font-medium mb-2"></label>
                <div class="relative">
                    <input asp-for="Password" type="password" placeholder="••••••••" class="w-full pl-10 pr-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary text-gray-900 bg-white/90 text-sm" required>
                    <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-500">
                        <i class="ri-lock-line"></i>
                    </div>
                </div>
                @* Display validation messages for Password *@
                <span asp-validation-for="Password" class="text-red-400 text-xs mt-1 block"></span>
            </div>
            <div class="flex justify-between items-center mb-6">
                <div class="flex items-center">
                    <input asp-for="RememberMe" type="checkbox" id="rememberMe" class="h-4 w-4 text-primary rounded border-gray-300 focus:ring-primary">
                    <label asp-for="RememberMe" class="ml-2 block text-gray-200 text-sm">Remember Me</label>
                </div>
                <a asp-controller="Auth" asp-action="ResetPassword" class="text-primary hover:underline text-sm font-medium">Forgot Password?</a>
            </div>
            <button type="submit" class="w-full py-3 bg-primary text-white font-semibold rounded-button hover:bg-primary/90 transition-colors duration-300">Sign In</button>
        </form>

        <p class="text-center text-gray-300 text-sm mt-6">
            Don't have an account? <a asp-controller="Auth" asp-action="SignUp" class="text-primary hover:underline font-medium">Sign Up</a>
        </p>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
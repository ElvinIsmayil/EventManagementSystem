@model IEnumerable<EventListVM>

@{
    ViewBag.Title = "My Events";
}

<div class="max-w-7xl mx-auto p-4 mt-8">

    <h1 class="text-3xl font-bold mb-8 text-center">Your Events</h1>

    @if (!Model.Any())
    {
        <div class="bg-blue-100 border border-blue-400 text-blue-700 px-6 py-8 rounded-lg text-center max-w-md mx-auto">
            <h4 class="text-xl font-semibold mb-2">No Events Found!</h4>
            <p class="mb-4">It looks like you haven't created any events yet. Why not create one now?</p>
            <a asp-action="Create" class="inline-block bg-green-600 text-white px-6 py-2 rounded-md hover:bg-green-700 transition">
                Create New Event
            </a>
        </div>
    }
    else
    {
        <div class="overflow-x-auto rounded-lg shadow-lg">
            <table class="min-w-full bg-white border border-gray-200">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="py-3 px-6 w-24">Photo</th>
                        <th class="py-3 px-6 text-left">Title</th>
                        <th class="py-3 px-6 text-left">Location</th>
                        <th class="py-3 px-6 text-left">Organizer</th>
                        <th class="py-3 px-6 text-left">Event Type</th>
                        <th class="py-3 px-6 text-center w-56">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    @foreach (var ev in Model)
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="py-3 px-6">
                                @if (!string.IsNullOrEmpty(ev.MainPhotoUrl))
                                {
                                    <img src="@ev.MainPhotoUrl" alt="Event Photo" class="rounded shadow-sm object-cover" style="width: 80px; height: 60px;" />
                                }
                                else
                                {
                                    <div class="flex items-center justify-center bg-gray-100 text-gray-400 rounded border border-dashed border-gray-300 text-xs" style="width: 80px; height: 60px;">
                                        No Image
                                    </div>
                                }
                            </td>
                            <td class="py-3 px-6 whitespace-nowrap font-medium">@ev.Title</td>
                            <td class="py-3 px-6">@ev.LocationName</td>
                            <td class="py-3 px-6">@ev.OrganizerName</td>
                            <td class="py-3 px-6">@ev.EventTypeName</td>
                            <td class="py-3 px-6 text-center space-x-2">
                                <a asp-action="Details" asp-route-id="@ev.Id"
                                   class="inline-flex items-center bg-blue-600 text-white px-3 py-1.5 rounded hover:bg-blue-700 transition"
                                   title="View Details">
                                    <i class="bi bi-eye mr-1"></i> Details
                                </a>
                                <a asp-action="SendInvitationToStudents" asp-route-eventId="@ev.Id"
                                   class="inline-flex items-center bg-yellow-500 text-white px-3 py-1.5 rounded hover:bg-yellow-600 transition"
                                   title="Send Invitations">
                                    <i class="bi bi-envelope mr-1"></i> Invite
                                </a>
                                <a asp-action="Update" asp-route-id="@ev.Id"
                                   class="inline-flex items-center bg-indigo-600 text-white px-3 py-1.5 rounded hover:bg-indigo-700 transition"
                                   title="Edit Event">
                                    <i class="bi bi-pencil mr-1"></i> Update
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    @* Bootstrap tooltips replaced by native 'title' attribute for simplicity, no jQuery required *@
}
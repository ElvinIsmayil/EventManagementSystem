<header class="bg-white shadow-sm sticky top-0 z-50 animate-fadeIn">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="flex items-center space-x-10">
            <a asp-controller="Home" asp-action="Index" class="text-3xl font-['Pacifico'] text-primary">Eventify</a>
            <nav class="hidden md:flex space-x-8">
                <a asp-controller="Home" asp-action="Index" class="nav-link active font-medium">Home</a>
                <a asp-controller="Events" asp-action="Index" class="nav-link font-medium">Events</a>

                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Invitations" asp-action="MyInvitations" class="nav-link font-medium">My Invitations</a>
                    <a asp-controller="Feedbacks" asp-action="MyFeedbacks" class="nav-link font-medium">My Feedbacks</a>
                }

                @if(User.IsInRole("Organizer"))
                {
                    <a asp-controller="Organizers" asp-action="Index" class="nav-link font-medium">My Events</a>
				}



                <a asp-controller="Home" asp-action="About" class="nav-link font-medium">About</a>
            </nav>
        </div>

        <div class="flex items-center space-x-6">
            <div class="relative">
                <input type="text" placeholder="Search events..." class="pl-10 pr-4 py-2 rounded border border-gray-300 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent text-sm w-64">
                <div class="absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 flex items-center justify-center text-gray-400">
                    <i class="ri-search-line"></i>
                </div>
            </div>


            @await Component.InvokeAsync("UserProfile")

            <div class="md:hidden w-10 h-10 flex items-center justify-center">
                <i class="ri-menu-line text-2xl"></i>
            </div>
        </div>
    </div>
</header>
@model IEnumerable<InvitationListVM>

@{
    ViewData["Title"] = "My Invitations";
    var personName = ViewBag.PersonName ?? "Guest";
}

<div class="max-w-7xl mx-auto p-4 mt-8">

    <h1 class="text-3xl font-bold mb-8 text-center">Hello @personName, here are your invitations</h1>

    @* TempData messages (Success, Error, Info) handled by your _AlertMessages partial *@

    @if (Model != null && Model.Any())
    {
        <div class="overflow-x-auto rounded-lg shadow-lg">
            <table class="min-w-full bg-white border border-gray-200">
                <thead class="bg-gray-800 text-white">
                    <tr>
                        <th class="text-left py-3 px-6">Event Name</th>
                        <th class="text-left py-3 px-6">Sent At</th>
                        <th class="text-left py-3 px-6">Status</th>
                        <th class="text-center py-3 px-6">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    @foreach (var invitation in Model)
                    {
                        var statusClass = invitation.Status switch
                        {
                            "Accepted" => "text-green-600 font-semibold",
                            "Declined" => "text-red-600 font-semibold",
                            "Pending" => "text-yellow-500 font-semibold",
                            "Sent" => "text-blue-500",
                            _ => ""
                        };

                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="py-4 px-6">@invitation.EventName</td>
                            <td class="py-4 px-6">@invitation.SentAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                            <td class="py-4 px-6"><span class="@statusClass">@invitation.Status</span></td>
                            <td class="py-4 px-6 text-center">
                                <a asp-action="Respond" asp-route-invitationCode="@invitation.InvitationCode" 
                                   class="inline-block bg-primary text-white px-4 py-2 rounded-md hover:bg-primary/90 transition-colors"
                                   title="View & Respond">
                                    <i class="bi bi-reply-fill mr-1"></i> Respond
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="bg-blue-100 border border-blue-400 text-blue-700 px-4 py-6 rounded-lg text-center mt-12">
            <h2 class="text-xl font-semibold mb-2">No Invitations Yet!</h2>
            <p>Keep an eye on your inbox, or check back later.</p>
        </div>
    }
</div>

@section Scripts {
    @* No extra scripts needed here unless you want to add custom behavior *@
}
